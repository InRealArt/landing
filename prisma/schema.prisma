// Configuration du datasource PostgreSQL
generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    schemas  = ["landing", "public"]
}

// Mod√®le Utilisateur
model Team {
    id           Int     @id @default(autoincrement())
    firstName    String
    lastName     String
    email        String
    role         String
    intro        String?
    description  String?
    photoUrl1    String?
    photoUrl2    String?
    linkedinUrl  String?
    instagramUrl String?
    facebookUrl  String?
    githubUrl    String?
    twitterUrl   String?
    websiteUrl   String?

    @@schema("landing")
}
